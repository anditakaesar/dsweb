{{> navempty}}
<div class="container login-container">
  <div class="row justify-content-center d-flex align-items-center m-2">
    <div class="card col align-self-center col-md-4">
      {{#if data.message}}
      <div class="alert {{data.message_type}} alert-dismissible fade show mt-3" role="alert">
        {{data.message}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      {{/if}}
      <div class="mb-3 mt-3">
        <a class="btn btn-primary" href="/auth/login">Login Again</a>
      </div>
    </div>
  </div>
</div>