{{> navlogin}}
<div class="container mb-5">
  <div class="row">
    <div class="col">
      <h1>Manage Config</h1>
    </div>
  </div>

  <div class="row">
    <div id="configEdit" class="col-lg-6 table-responsive">
      <img src="/assets/loading.gif" style="width: 20%;">
    </div>

    <div class="col-lg-6">
      <div class="card">
        <div class="card-body">
          <div class="mb-3" hidden>
            <label for="configId" class="form-label">Id</label>
            <input type="text" class="form-control" id="configId" disabled>
          </div>
          <div class="mb-3">
            <label for="configKey" class="form-label">Config Key [<span id="configIdTxt"></span>]</label>
            <input type="text" class="form-control" id="configKey">
          </div>
          <div class="mb-3">
            <label for="configValue" class="form-label">Config Value</label>
            <input type="text" class="form-control" id="configValue">
          </div>
        </div>
        <div class="card-footer">
          <button id="btnSaveCreate" type="button" class="btn btn-primary" onclick="SaveCreateConfig();"><span
              id="configSaveBtnTxt">Create</span></button>
          <button id="btnCancel" type="button" class="btn btn-warning" onclick="ClearEdit();">Cancel</button>
        </div>
      </div>
    </div>

  </div>

  <div class="row">
    <div id="alertCol" class="col">
    </div>
  </div>
</div>

<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div   class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
      </div>
      <div class="modal-body">
        <p>You are about to delete <b><i class="title"></i></b> record, this procedure is irreversible.</p>
        <p>Do you want to proceed?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary btn-ok">Ok</button>
      </div>
    </div>
  </div>
</div>

<script src="/scripts/admin/config.bundle.js"></script>