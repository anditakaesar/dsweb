<div class="container mb-5">
  <div class="row">
    <div class="col">
      <h1>Data Entry Perjalanan Dinas</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <div class="mb-2">
        <label for="granteeName" class="form-label">Nomor</label>
        <div class="input-group">
          <input type="text" class="form-control" id="numPrefix" placeholder="000">
          <input type="text" class="form-control" id="numMiddle" placeholder="XX" value="/ST-DIR/" disabled readonly>
          <input type="text" class="form-control" id="numPostfix" placeholder="XX" disabled readonly>
          <input type="text" class="form-control" id="numYear" value="/2021" disabled readonly>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div class="mb-2">
        <label for="grantorName" class="form-label">Pejabat yang Berwenang Memberikan Izin</label>
        <input type="text" class="form-control" id="grantorName">
      </div>
      <div class="mb-2">
        <label for="granteeName" class="form-label">Nama dan Jabatan Diperintah</label>
        <div class="input-group">
          <input type="text" class="form-control" id="granteeName" placeholder="Nama">
          <input type="text" class="form-control" id="granteePosition" placeholder="Jabatan">
        </div>
      </div>
      <div class="mb-2">
        <label for="travelDeparture" class="form-label">Tempat Berangkat</label>
        <input type="text" class="form-control" id="travelDeparture">
      </div>
      <div class="mb-2">
        <label for="travelDestination" class="form-label">Tempat Tujuan</label>
        <input type="text" class="form-control" id="travelDestination">
      </div>
      <div class="mb-2">
        <label for="travelType" class="form-label">Jenis Perjalanan Dinas</label>
        <input type="text" class="form-control" id="travelType">
      </div>
      <div class="mb-2">
        <label for="travelArrival" class="form-label">Datang di</label>
        <div class="input-group">
          <input type="text" class="form-control w-50" id="travelArrival" placeholder="Tempat">
          <input type="text" class="form-control w-50" id="travelArrivalDate" placeholder="Tanggal">
        </div>
      </div>

    </div>
    <div class="col-lg-6">
      <div class="mb-2">
        <label for="travelReason" class="form-label">Maksud Perjalanan</label>
        <textarea type="text" class="form-control" id="travelReason" rows="3"></textarea>
      </div>
      <div class="mb-2">
        <label for="travelDate" class="form-label">Tanggal Perjalanan Dinas</label>
        <input type="text" class="form-control w-50" id="travelDate">
      </div>
      <div class="mb-2">
        <label for="travelLength" class="form-label">Lama Perjalanan</label>
        <div class="input-group w-25">
          <input type="text" class="form-control" id="travelLength">
          <div class="input-group-text">Hari</div>
        </div>
      </div>
      <div class="mb-2">
        <label for="guarantorName" class="form-label">Penanggung Perjalanan Dinas</label>
        <input type="text" class="form-control" id="guarantorName">
      </div>
      <div class="mb-2">
        <label for="otherInfo" class="form-label">Keterangan Lain-lain</label>
        <textarea type="text" class="form-control" id="otherInfo" rows="3"></textarea>
      </div>

    </div>

  </div>
  <div class="row">
    <div class="col-lg-6">
      <button id="btnClear" type="button" class="btn btn-warning">Clear</button>
      <button id="btnSave" type="button" class="btn btn-primary">Save</button>
    </div>
  </div>
  <div class="row">
    <div id="alertCol" class="col">
    </div>
  </div>
</div>
<script src="/scripts/staff/staff.bundle.js"></script>