<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
    <tr>
      <td>{{this.username}}</td>
      <td>
        <button type="button" class="btn btn-sm btn-primary" onclick="EditUser({{this.id}})">Edit / View</button>
        {{!-- <button type="button" class="btn btn-sm btn-danger">Delete</button> --}}
      </td>
    </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <td colspan="2">Total users: {{count}}</td>
    </tr>
  </tfoot>
</table>